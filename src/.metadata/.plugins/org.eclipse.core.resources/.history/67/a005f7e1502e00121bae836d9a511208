package de.tud.in.middleware.costumers;

import javax.ejb.EJB;
import javax.ejb.LocalBean;
import javax.ejb.Stateless;
import javax.jws.WebService;

import de.tud.in.middleware.dao.costumers.CustomerDAO;

/**
 * Session Bean implementation class CostumerManagement
 */
@WebService
@Stateless
@LocalBean
public class CustomerManagement implements CostumerManagementRemote, CostumerManagementLocal {

	@EJB 
	CustomerDAO customerDAO;
    /**
     * Default constructor. 
     */
    public CustomerManagement(){
        // TODO Auto-generated constructor stub
    }

	@Override
	public long getNumberOfCustomers() {
		return customerDAO.getNumberOfCostumers();
	}

	@Override
	public String getCostumerName(long id) {
		return customerDAO.getCostumerName(id);
	}

	@Override
	public long addCustomer(String name) {
		return customerDAO.addCustomer(name);
	}

}
