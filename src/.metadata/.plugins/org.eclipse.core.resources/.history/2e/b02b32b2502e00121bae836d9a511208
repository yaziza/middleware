package de.tud.in.middleware.costumers;

import javax.ejb.EJB;
import javax.ejb.LocalBean;
import javax.ejb.Stateless;
import javax.jws.WebService;

import de.tud.in.middleware.dao.costumers.CostumerDAO;

/**
 * Session Bean implementation class CostumerManagement
 */
@WebService
@Stateless
@LocalBean
public class CostumerManagement implements CostumerManagementRemote, CostumerManagementLocal {

	@EJB 
	CostumerDAO costumerDAO;
    /**
     * Default constructor. 
     */
    public CostumerManagement(){
        // TODO Auto-generated constructor stub
    }

	@Override
	public long getNumberOfCustomers() {
		return costumerDAO.getNumberOfCostumers();
	}

	@Override
	public String getCostumerName(long id) {
		return costumerDAO.getCostumerName(id);
	}

	@Override
	public long addCustomer(String name) {
		return costumerDAO.addCustomer(name);
	}

}
