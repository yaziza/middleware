CREATE TABLE CUSTOMER (
        ID INTEGER GENERATED ALWAYS AS IDENTITY NOT NULL,
        NAME VARCHAR(50)
    );
ALTER TABLE CUSTOMER ADD CONSTRAINT CUSTOMER_PRIMARY_KEY PRIMARY KEY (ID);
 
CREATE TABLE PRODUCT (
        ID INTEGER GENERATED ALWAYS AS IDENTITY NOT NULL,
        DESCRIPTION VARCHAR(50)
    );
ALTER TABLE PRODUCT ADD CONSTRAINT PRODUCT_PRIMARY_KEY PRIMARY KEY (ID); 

INSERT INTO CUSTOMER (NAME) VALUES ('Yasser');
INSERT INTO CUSTOMER (NAME) VALUES ('Alex');

INSERT INTO PRODUCT (DESCRIPTION) VALUES ('product 1');
INSERT INTO PRODUCT (DESCRIPTION) VALUES ('product 2');